<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:gravity="center_vertical"
        android:text="@string/text_title_label"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/edit_title"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="80dp"
        android:layout_marginRight="5dp"
        android:padding="0dp"
        android:textSize="12sp" />

    <TextView
        android:textSize="12sp"
        android:layout_below="@+id/edit_title"
        android:text="@string/text_author_label"
        android:gravity="center_vertical"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp" />

    <EditText
        android:id="@+id/edit_author"
        android:textSize="12sp"
        android:padding="0dp"
        android:layout_below="@+id/edit_title"
        android:layout_marginStart="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginRight="5dp" />

    <TextView
        android:textSize="12sp"
        android:layout_below="@+id/edit_author"
        android:text="@string/text_subject_label"
        android:gravity="center_vertical"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp" />

    <EditText
        android:id="@+id/edit_subject"
        android:textSize="12sp"
        android:padding="0dp"
        android:layout_below="@+id/edit_author"
        android:layout_marginStart="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginRight="5dp" />

    <TextView
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_subject"
        android:layout_marginLeft="5dp"
        android:gravity="center_vertical"
        android:text="@string/text_key_word_label"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/edit_keywords"
        android:textSize="12sp"
        android:padding="0dp"
        android:layout_below="@+id/edit_subject"
        android:layout_marginStart="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:layout_marginRight="5dp" />

    <TextView
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_keywords"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:text="@string/text_creator_label"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/edit_creator"
        android:textSize="12sp"
        android:padding="0dp"
        android:layout_below="@+id/edit_keywords"
        android:layout_marginTop="10dp"
        android:layout_marginStart="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginRight="5dp" />

    <TextView
        android:textSize="12sp"
        android:layout_below="@+id/edit_creator"
        android:text="@string/text_producer_label"
        android:gravity="center_vertical"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp" />

    <EditText
        android:id="@+id/edit_producer"
        android:textSize="12sp"
        android:padding="0dp"
        android:layout_below="@+id/edit_creator"
        android:layout_marginStart="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginRight="5dp" />

    <LinearLayout
        android:id="@+id/item_pdfa"
        android:layout_below="@id/edit_producer"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="12sp"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:text="PDF/A"/>
        <TextView
            android:id="@+id/txt_pdfa"
            android:padding="0dp"
            android:textSize="12sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/item_create"
        android:layout_below="@id/item_pdfa"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="12sp"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:text="Create"/>
        <TextView
            android:id="@+id/txt_create"
            android:padding="0dp"
            android:textSize="12sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/item_modify"
        android:layout_below="@id/item_create"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="12sp"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:text="Modify"/>
        <TextView
            android:id="@+id/txt_modify"
            android:padding="0dp"
            android:textSize="12sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</RelativeLayout>