<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/annot_menu_btn_size"
    android:background="@color/annot_menu_bg_color"
    android:orientation="horizontal">


    <ImageButton
        android:id="@+id/btn_annot_add"
        android:layout_width="@dimen/annot_menu_btn_size"
        android:layout_height="match_parent"
        android:background="@drawable/bg_btn_menu"
        android:contentDescription="@string/annot_add"
        android:scaleType="fitXY"
        android:src="@drawable/ic_add" />

    <ImageButton
        android:id="@+id/btn_annot_remove"
        android:layout_width="@dimen/annot_menu_btn_size"
        android:layout_height="match_parent"
        android:background="@drawable/bg_btn_menu"
        android:scaleType="fitXY"
        android:src="@drawable/ic_delete"
        android:contentDescription="@string/annot_remove" />


</LinearLayout>
