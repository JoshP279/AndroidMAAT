<?xml version="1.0" encoding="utf-8"?>
<com.radaee.pen.RDPenMenu xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingLeft="40dp"
    android:paddingTop="42dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="@drawable/menu_back"
        android:paddingRight="6dp"
        android:paddingBottom="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/item_pen"
            android:paddingLeft="6dp"
            android:paddingTop="12dp"
            android:paddingRight="6dp"
            android:paddingBottom="6dp"
            android:layout_alignParentTop="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:clickable="false"
                    android:enabled="false"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/pen_pen" />
                <com.radaee.pen.RDPenDemoView
                    android:id="@+id/vw_pen"
                    android:tileMode="repeat"
                    android:gravity="top"
                    android:clickable="false"
                    android:enabled="false"
                    android:layout_width="200dp"
                    android:layout_height="50dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <SeekBar
                    android:progressDrawable="@drawable/pen_width_style"
                    android:thumb="@drawable/pen_width_thumb"
                    android:thumbOffset="0dp"
                    android:layout_width="216dp"
                    android:layout_height="20dp"
                    android:id="@+id/seek_pen" />
                <TextView
                    android:id="@+id/txt_pen"
                    android:clickable="false"
                    android:enabled="false"
                    android:textColor="@color/black"
                    android:paddingLeft="2dp"
                    android:layout_width="32dp"
                    android:layout_height="20dp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/item_color"
            android:padding="6dp"
            android:layout_below="@id/item_pen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:clickable="false"
                    android:enabled="false"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/pen_color" />
                <com.radaee.pen.RDPenDemoView
                    android:id="@+id/vw_color"
                    android:clickable="false"
                    android:enabled="false"
                    android:layout_width="200dp"
                    android:layout_height="50dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <SeekBar
                    android:progressDrawable="@drawable/pen_width_style"
                    android:thumb="@drawable/pen_width_thumb"
                    android:thumbOffset="0dp"
                    android:layout_width="216dp"
                    android:layout_height="20dp"
                    android:id="@+id/seek_color" />
                <TextView
                    android:id="@+id/txt_color"
                    android:clickable="false"
                    android:enabled="false"
                    android:textColor="@color/black"
                    android:paddingLeft="2dp"
                    android:layout_width="32dp"
                    android:layout_height="20dp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/item_mark"
            android:padding="6dp"
            android:layout_below="@id/item_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:clickable="false"
                    android:enabled="false"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/pen_mark" />
                <com.radaee.pen.RDPenDemoView
                    android:id="@+id/vw_mark"
                    android:clickable="false"
                    android:enabled="false"
                    android:layout_width="200dp"
                    android:layout_height="50dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <SeekBar
                    android:progressDrawable="@drawable/pen_width_style"
                    android:thumb="@drawable/pen_width_thumb"
                    android:thumbOffset="0dp"
                    android:layout_width="216dp"
                    android:layout_height="20dp"
                    android:id="@+id/seek_mark" />
                <TextView
                    android:id="@+id/txt_mark"
                    android:paddingLeft="2dp"
                    android:clickable="false"
                    android:enabled="false"
                    android:textColor="@color/black"
                    android:layout_width="32dp"
                    android:layout_height="20dp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/item_rubber"
            android:paddingLeft="6dp"
            android:paddingTop="6dp"
            android:paddingRight="6dp"
            android:paddingBottom="12dp"
            android:layout_below="@id/item_mark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:clickable="false"
                    android:enabled="false"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/rubber" />
                <com.radaee.pen.RDPenDemoView
                    android:id="@+id/vw_rubber"
                    android:clickable="false"
                    android:enabled="false"
                    android:layout_width="200dp"
                    android:layout_height="50dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <SeekBar
                    android:progressDrawable="@drawable/pen_width_style"
                    android:thumb="@drawable/pen_width_thumb"
                    android:thumbOffset="0dp"
                    android:layout_width="216dp"
                    android:layout_height="20dp"
                    android:id="@+id/seek_rubber" />
                <TextView
                    android:id="@+id/txt_rubber"
                    android:paddingLeft="2dp"
                    android:clickable="false"
                    android:enabled="false"
                    android:textColor="@color/black"
                    android:layout_width="32dp"
                    android:layout_height="20dp"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</com.radaee.pen.RDPenMenu>